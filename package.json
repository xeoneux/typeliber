{
  "name": "typeliber",
  "version": "2.0.0",
  "description": "a typeliber starter",
  "main": "build/main/index.js",
  "module": "build/module/index.js",
  "typings": "build/main/index.d.ts",
  "repository": "https://github.com/xeoneux/typeliber",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "clean": "trash build",
    "version": "standard-version",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:tslint": "tslint --fix --project .",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "test": "run-s build test:*",
    "test:unit": "nyc --silent ava",
    "test:lint": "tslint --project . && prettier \"src/**/*.ts\" --list-different",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\" \"test:unit -- --watch\"",
    "cov": "run-s build test:unit cov:html",
    "cov:html": "nyc report --reporter=html",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "doc": "run-s doc:html && opn docs/index.html",
    "doc:html": "typedoc src/ --target ES6 --mode file --out docs",
    "doc:publish": "run-s build && gh-pages -m \"[ci skip] Updates\" -d docs",
    "all": "run-s test cov:check doc:html",
    "release": "run-s all version doc:publish"
  },
  "devDependencies": {
    "ava": "^1.0.0-beta.8",
    "cz-conventional-changelog": "^2.1.0",
    "gh-pages": "^1.2.0",
    "npm-run-all": "^4.1.3",
    "nyc": "^12.0.2",
    "opn-cli": "^3.1.0",
    "prettier": "^1.14.2",
    "standard-version": "^4.4.0",
    "trash-cli": "^1.4.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typedoc": "^0.11.1",
    "typescript": "^3.0.3"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js"
    ]
  },
  "ava": {
    "sources": [
      "build/main/**/*.js"
    ],
    "files": [
      "build/main/**/*.spec.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
